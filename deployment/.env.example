# LangChain Platform Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED: LLM Provider API Keys (at least one required)
# =============================================================================
# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Claude) API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# REQUIRED FOR TRACING: LangSmith Configuration
# =============================================================================
# Enable LangSmith tracing (set to "true" to enable)
LANGCHAIN_TRACING_V2=true

# LangSmith API key (get from https://smith.langchain.com)
LANGCHAIN_API_KEY=lsv2_your_langsmith_api_key_here

# Project name for grouping traces (separate projects for different apps)
LANGCHAIN_PROJECT=langchain-platform

# LangSmith endpoint (default: https://api.smith.langchain.com)
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# OPTIONAL: Web Search Tool (for agents)
# =============================================================================
# Tavily Search API (for web search tools)
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# =============================================================================
# OPTIONAL: Azure OpenAI
# =============================================================================
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8000

# =============================================================================
# LANGGRAPH CONFIGURATION
# =============================================================================
# LangGraph Server URL (if running separately)
LANGGRAPH_SERVER_URL=http://localhost:8123

# Default model for LangGraph agents
LANGGRAPH_DEFAULT_MODEL=anthropic

# =============================================================================
# ENTERPRISE AGENTS CONFIGURATION
# =============================================================================

# Default LLM provider for enterprise agents (openai or anthropic)
ENTERPRISE_AGENT_PROVIDER=openai

# Default model for enterprise agents
ENTERPRISE_AGENT_MODEL=gpt-4o-mini

# Vector store persistence directory
CHROMA_PERSIST_DIR=./chroma_db

# =============================================================================
# OPTIONAL: Database for Persistent Checkpoints
# =============================================================================
# SQLite (default - no additional config needed)
# DATABASE_URL=sqlite:///./checkpoints.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/langchain_platform
